import React from 'react';
import { TouchableOpacity, Text } from 'react-native';

export default function ServiceButton({title, onPress}) {
  return (
    <TouchableOpacity onPress={onPress} style={{padding:16, backgroundColor:'#009739', borderRadius:12, marginBottom:12}}>
      <Text style={{color:'#fff', fontWeight:'600', textAlign:'center'}}>{title}</Text>
    </TouchableOpacity>
  );
}

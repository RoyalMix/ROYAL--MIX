gh api -X POST repos/$REPO/labels -f name='area:docs' -f color='FBCA04'
gh api -X POST repos/$REPO/labels -f name='area:security' -f color='B60205'
gh api -X POST repos/$REPO/labels -f name='priority:high' -f color='B60205'
gh api -X POST repos/$REPO/labels -f name='priority:medium' -f color='FBCA04'
